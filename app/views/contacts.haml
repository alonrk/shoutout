.h1 Connect with customers and drive traffic to your site
%div{"so-ruler" => ''}
.contacts-container
  .h2 bla bla bla
  .add
    %input.add.input{"ng-model" => "contactsToAdd"}
    %button.add.btn{"ng-click" => "addContacts()"} Add
  %br
  %input{:type => "checkbox", "ng-click" => "selectAll()", "ng-model" => "allSelected", :style => "margin-left: 100px"} Select All
  %br
  .contacts{:id => "contactsDiv", "ng-scroll-event" => "onContactsScroll($event, isEndEvent)"}
    %table
      %tr.contact{"ng-repeat" => "contact in contacts"}
        %td
          %input{:type => "checkbox", "ng-model" => "contact.selected"}
        %td{:style => "width: 150px"} {{contact.name}}
        %td {{contact.email}}  
  %br
  %button.prev-btn{"ng-click" => "prev()"}Back   
  %button.next-btn{"ng-click" => "next()"}Next   